{
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
    "editor.detectIndentation": false,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/migrations": true
    },
    "explorerExclude.backup": {},
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
	},
	"python.formatting.provider": "none"
}